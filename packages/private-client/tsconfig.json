{
  // "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist", // Move output files (including .d.ts) to ./dist
    "declaration": false, // Generate .d.ts files
    // "declarationDir": "./dist",   // Move .d.ts files to the dist directory
    "emitDeclarationOnly": false, // Emit both .js and .d.ts files
    "sourceMap": true, // Enable sourcemaps (optional)
    "moduleResolution": "bundler",
    "jsx": "react-jsx", // or "react" depending on React version
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".", // This points to the root of your public-client folder
    "types": ["node"],
    "paths": {
      "@shared/*": ["../shared-components/*"],
      "@public-client/*": ["../public-client/src/*"],
      "@/*": ["src/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "include": [
    // "src",
    "../shared-components",
    "declaration.d.ts",
    "shared.d.ts", // Include the declaration file
  ]
}
