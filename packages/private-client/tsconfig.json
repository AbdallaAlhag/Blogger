{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "jsx": "react-jsx", // or "react" depending on React version
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".", // This points to the root of your public-client folder
    "paths": {
      "@shared/*": ["../shared-components/*"],
      "@public-client/*": ["../public-client/src/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "include": [
    "src",
    "../shared-components",
    "declaration.d.ts",
    "shared.d.ts", // Include the declaration file
    "../public-client/src"
  ]
}
