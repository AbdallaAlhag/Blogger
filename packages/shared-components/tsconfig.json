{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["./shared.d.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "shared.d.ts"],
  "exclude": ["node_modules"]
}
