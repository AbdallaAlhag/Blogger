{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist", 
    "declaration": true, 
    "declarationDir": "./dist", 
    "emitDeclarationOnly": false, 
    "sourceMap": true, 
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared-components/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    // "src", // Ensures all files in src are included
    "../shared-components/**/*",
    "declaration.d.ts",
    "shared.d.ts" 
  ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
